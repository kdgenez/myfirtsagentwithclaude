# =================================
# CONFIGURACIÓN DEL AGENTE LANGCHAIN
# =================================

# API Key de Groq (REQUERIDO)
# Obtén tu API key en: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# =================================
# HERRAMIENTAS OPCIONALES
# =================================

# Google Search API (OPCIONAL - para búsquedas web)
# Obtén tu API key en: https://developers.google.com/custom-search/v1/introduction
GOOGLE_API_KEY=your_google_api_key_here

# Google Custom Search Engine ID (OPCIONAL - para búsquedas web)
# Crea tu CSE en: https://cse.google.com/cse/
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# =================================
# CONFIGURACIÓN ADICIONAL
# =================================

# Configuración del modelo (opcional, usa valores por defecto si no se especifica)
MODEL_NAME=llama3-8b-8192
MODEL_TEMPERATURE=0.7
MODEL_MAX_TOKENS=1024

# Debug mode (opcional)
DEBUG_MODE=False
